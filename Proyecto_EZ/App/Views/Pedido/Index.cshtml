
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lstTipos = (List<Datos.tipo>)ViewBag.Tipos;
    var lstProductos = (List<Entidades.spGetProductos>)ViewBag.Productos;
}

<div style="padding-top: 50px;">
    <h2 class="h2 text-center">PEDIDOS</h2>
    <br />
    <div class="row">
        <form class="form-horizontal">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label col-sm-3">Desde</label>
                    <div class="col-sm-7">
                        <input id="txtFechaDesde" type="date" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Hasta</label>
                    <div class="col-sm-7">
                        <input id="txtFechaHasta" type="date" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Clientes</label>
                    <div class="col-sm-7">
                        @Html.Partial("comboClientes")
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Estado</label>
                    <div class="col-sm-7">
                        <select class="form-control" id="cmbEstados">
                            <option value="">Elija un estado</option>
                            <option value="C">Cargado</option>
                            <option value="E">Entregado</option>
                            <option value="PP">Pago parcial</option>
                            <option value="F">Facturado</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Repartidor</label>
                    <div class="col-sm-7">
                        @Html.Partial("comboUsuarios")
                    </div>
                    <div class="col-sm-2">
                        <button id="btnBuscar" class="btn btn-success">Buscar</button>
                    </div>
                </div>
            </div>
            <div class="col-sm-4"></div>
        </form>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <button id="btnNuevoPedido" class="btn btn-default" data-toggle="modal" data-target="#NuevoForm"><i class="fas fa-list-alt"></i>&nbsp;&nbsp;Nuevo Pedido</button>
        </div>
    </div>
    <br />
    <div class="row" id="tabla" style="display: none;">
        <div class="col-sm-12 col-xs-12">
            <div class="panel panel-primary">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="tablePedidos" class="table table-hover table-condensed table-bordered table-estilo" style="width:100%">
                            <thead>
                                <tr>
                                    <td>ID Pedido</td>
                                    <td>Cliente</td>
                                    <td>Entrega</td>
                                    <td>Estado</td>
                                    <td>Monto</td>
                                    <td>Facturado</td>
                                    <td>Debe</td>
                                    <td>Repartidor</td>
                                    <td>Vuelta</td>
                                    <td>Acciones</td>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade bs-example-modal-lg" id="NuevoForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Nuevo Pedido</h4>
                </div>
                <div class="modal-body">
                    <br />
                    <div class="row">
                        <div class="form-horizontal" id="formNuevoPedido">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-6">
                                <input type="hidden" id="txtId" value="0" />
                                <div class="form-group">
                                    <label class="control-label col-sm-3">Cliente</label>
                                    <div class="col-sm-9">
                                        <select id="cmbClientesPedido" class="form-control">
                                            <option value="">Elija un cliente</option>
                                            @foreach (var item in ViewBag.ClientesPedido)
                                            {
                                                <option value="@item.cli_id">
                                                    @item.cli_nombre - @item.cli_direccion
                                                </option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-3">Repartidor</label>
                                    <div class="col-sm-9">
                                        <select id="cmbUsuariosPedido" class="form-control">
                                            <option value="">Elija un repartidor</option>
                                            @foreach (var item in ViewBag.UsuariosPedido)
                                            {
                                                <option value="@item.usu_usuario">@item.usu_nombre</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-3">Vuelta</label>
                                    <div class="col-sm-9">
                                        <select class="form-control" id="cmbVueltas">
                                            <option value="">Elija una vuelta</option>
                                            <option value="1">Vuelta I</option>
                                            <option value="2">Vuelta II</option>
                                            <option value="3">Vuelta III</option>
                                            <option value="4">Vuelta IV</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-3">Estado</label>
                                    <div class="col-sm-9">
                                        <select class="form-control" id="cmbEstadosPedido">
                                            <option value="">Elija un estado</option>
                                            <option value="C">Cargado</option>
                                            <option value="E">Entregado</option>
                                            <option value="PP">Pago parcial</option>
                                            <option value="F">Pago total</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-3">Entrega</label>
                                    <div class="col-sm-9">
                                        <input type="date" class="form-control" id="txtFechaEntrega" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-3"></div>
                        </div>
                    </div>
                    <h4>Listado de Productos</h4>
                    <hr />
                    <form class="form-horizontal" id="formPedidos">
                        <div class="row">
                            <div id="item">
                                <div class="col-sm-3">
                                    <select class="form-control selectpicker" data-live-search="true" id="cmbProductos">
                                        <option value="">Elija un producto</option>
                                        @foreach (var item in lstProductos)
                                        {
                                            <option data-info="@item.IdProducto" data-precio="@item.PrecioVenta" value="@item.IdProducto">
                                                @if (item.Modelo.Equals("No Aplica"))
                                                {
                                                    @(item.Marca + " - " + item.Envase + " " + item.Tamanio)
                                                }
                                                else
                                                {
                                                    @(item.Modelo + " - " + item.Envase + " " + item.Tamanio)
                                                }
                                            </option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-2 cantidad">
                                    <input type="text" id="txtCantidad" class="form-control" placeholder="Packs" />
                                </div>
                                <div class="col-sm-2 precio">
                                    <input type="text" id="txtPrecio" style="text-align: right;" class="form-control" placeholder="Precio x Pack" readonly />
                                </div>
                                <div class="col-sm-2 monto">
                                    <input type="text" id="txtMonto" style="text-align: right;" class="form-control" placeholder="Monto a Pagar" readonly />
                                </div>
                                <div class="col-sm-1">
                                    <button type="button" id="btnItem" class="btn btn-default"><i class="fas fa-plus"></i></button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <br />
                    <div class="row">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-sm-4">Total</label>
                                <div class="col-sm-3">
                                    <input type="text" class="form-control" style="text-align:right;" readonly id="txtTotal" />
                                </div>
                                <div class="col-sm-1">
                                    <button type="button" data-toggle="tooltip" title="Calcular Total" class="btn btn-default" style="text-align:right;" id="btnCalcTotal"><i class="fas fa-calculator"></i></button>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4">Descuento</label>
                                <div class="col-sm-3">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <input id="chkDescuento" type="checkbox" title="Aplica Descuento">
                                        </span>
                                        <input type="text" class="form-control" id="txtDescuento" placeholder="%" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4">Facturado</label>
                                <div class="col-sm-3">
                                    <input type="text" disabled style="text-align: right;" id="txtFacturado" class="form-control" value="0.00" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="col-sm-12">
                            <button class="btn btn-success" type="submit" id="btnGenerarPedido"><i class="fas fa-cart-arrow-down"></i>&nbsp;Guardar Pedido</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fas fa-times"></i>&nbsp;Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("modalVerDetalle")
</div>

@section Scripts {
    <script src="~/Scripts/date-eu.js"></script>
    <script src="~/Scripts/bootstrap-select.min.js"></script>
    <script>
        $(document).ready(function () {

            var cargarSelect = function () {
                $('.selectpicker').selectpicker('refresh');
            }

            //Cargamos los pedidos en el LOAD
            CargarFechas();
            CargarPedidos();
            $('[data-toggle="tooltip"]').tooltip();
            var facturado = 0;
            $('select.selectpicker').selectpicker();

            //Mostrar con efecto FADE al cargar
            $("#tabla").show("fade", { percent: 0 }, 1500);

            $('#btnBuscar').click(function (e) {
                e.preventDefault();
                Limpiar();
                CargarPedidos();
            });

            //Cargarmos los datepickers
            function CargarFechas() {

                var fechaActual = new Date();

                $('#txtFechaDesde').val(moment(fechaActual).subtract(1, 'months').format('YYYY-MM-DD'));
                $('#txtFechaHasta').val(moment(fechaActual).add(5,'days').format('YYYY-MM-DD'));
            }


            //Función para volver a crear la tabla
            function Limpiar() {
                $("#tablePedidos").dataTable().fnDestroy();
            }

            function LimpiarFormulario() {

                var items = $('#formPedidos').children();
                for (var i = 1; i < items.length; i++) {
                    items[i].remove();
                }

                $('#txtId').val(0);
                $('#txtFacturado').val(0.00).prop('disabled', true);
                $('#txtTotal').val(0);
                facturado = 0;
            }

            //Funcion para limpiar el modal al cerrarse
            $('#NuevoForm').on('hidden.bs.modal', function (e) {

                $(this)
                  .find("input[type=text],textarea,select")
                     .val('')
                     .end()
                  .find("input[type=checkbox], input[type=radio]")
                     .prop("checked", "")
                     .end();
                //$('.filter-option').html('Elija un producto');
                $('#cmbProductos.selectpicker').selectpicker('refresh');
                document.getElementById("txtFechaEntrega").valueAsDate = null;
                $('#txtDescuento').prop('disabled', true);
                LimpiarFormulario();
            });

            $('#btnNuevoPedido').click(function (e) {

                var clienteSeleccionado = $('#cmbClientes').val();

                if (clienteSeleccionado != '' &&
                    clienteSeleccionado != undefined &&
                    clienteSeleccionado != null)
                    $('#cmbClientesPedido').val(clienteSeleccionado);
                else
                    $('#cmbClientesPedido').val('');

                var fechaActual = new Date();
                $('#txtFechaEntrega').val(moment(fechaActual).add(1, 'days').format('YYYY-MM-DD'));

                $('#cmbEstadosPedido').val('C');

            });

            //Habilitamos el botón cuando los campos requeridos esten llenos
            function ValidarFormulario() {

                var marca = $('#cmbMarca').val();
                var modelo = $('#cmbModelo').val();
                var tamanio = $('#cmbTamanio').val();
                var tipo = $('#cmbTipos').val();
                var costo = $('#txtCosto').val();
                var cantPack = $('#txtCantPack').val();
                var porc = $('#txtPorcentaje').val();

                if (marca === "" || modelo === "" ||
                    tamanio === "" || tipo === "" ||
                    costo === "" || cantPack === "" ||
                    porc === "")
                    return false;
                else
                    return true;
            }

            $('#formPedidos').each(function () {

                var Total = 0;
                ($(this)).on('click', function () {

                    //Obtenemos el precio del producto y seteamos el input
                    $('#item > .col-sm-3 > .bootstrap-select > select.selectpicker').on('change', function () {

                        var precio = $(this).children("option:selected").data('precio').replace(',','.');
                        var txtPrecio = $(this).parent().parent().parent().find('.precio').find('input[type="text"]');
                        var txtMonto = $(this).parent().parent().parent().find('.monto').find('input[type="text"]');
                        var txtCantidad = $(this).parent().parent().parent().find('.cantidad').find('input[type="text"]');

                        if ($(this).children("option:selected").val() === '') {
                            $(txtPrecio).val('');
                            $(txtMonto).val('');
                            $(txtCantidad).val('')
                        } else {
                            $(txtPrecio).val(Math.round((precio * 100) / 100));
                            $(txtMonto).val(Math.round(((precio * $(txtCantidad).val()) * 100) / 100));
                        }
                    });

                    //Cuando modificamos la cantidad, calculamos el monto total por item
                    $('#item > .col-sm-2.cantidad > input[type="text"]').keyup(function () {
                        
                        var txtPrecio = $(this).parent().parent().find('.precio').find('input[type="text"]');
                        var txtMonto = $(this).parent().parent().find('.col-sm-2.monto').find('input[type="text"]');
                        var total = $(this).val() * $(txtPrecio).val();
                        $(txtMonto).val(Math.round((total + Number.EPSILON) * 100) / 100);
                    });

                });

            });

            $('#formPedidos').on('click', '.borrarItem', function (e) {
                e.preventDefault();
                $(this).parent().parent().parent().remove();
            });

            $('#btnCalcTotal').click(function (e) {

                $(this).tooltip('hide');

                var total = 0;

                $('#formPedidos > .row > #item').each(function () {
                    var monto = $(this).find('.col-sm-2.monto').find('input[type="text"]').val();
                    total = parseFloat(total) + parseFloat(monto);
                });

                if (isNaN(total))
                    $('#txtTotal').val(0);
                else {

                    if ($('#chkDescuento').prop('checked')) {

                        var descuento = $('#txtDescuento').val();
                        var totalDescuento = total - (total * (descuento / 100));
                        totalDescuento = Math.round((totalDescuento * 100) / 100);
                        $('#txtTotal').val(totalDescuento);
                    }
                    else
                        $('#txtTotal').val(total);
                }

            });

            $('#formPedidos').on('click', '.itemNuevo', function (e) {

                var nuevoItem = '<div class="row" style="margin-top: 5px;"><div id="item"><div class="col-sm-3">' +
                '<select class="form-control selectpicker" onload="cargarSelect()" data-live-search="true"><option value="">Elija un producto</option>@foreach (var item in lstProductos){<option data-info="@item.IdProducto" data-precio="@item.PrecioVenta" value="@item.IdProducto">@if (item.Modelo.Equals("No Aplica")){@(item.Marca + " - " + item.Envase + " " + item.Tamanio)}else{@(item.Modelo + " - " + item.Envase + " " + item.Tamanio)}</option>}</select></div>' +
                '<div class="col-sm-2 cantidad">' +
                '<input type="text" class="form-control" placeholder="Packs" />' +
                '</div><div class="col-sm-2 precio"><input type="text" style="text-align: right;" class="form-control" placeholder="Precio x Pack" readonly /></div>' +
                '<div class="col-sm-2 monto"><input type="text" style="text-align: right;" class="form-control" placeholder="Monto a Pagar" readonly /></div>' +
                '<div class="col-sm-3"><button type="button" class="btn btn-danger borrarItem"><i class="fas fa-minus"></i></button> <button type="button" class="btn btn-default itemNuevo"><i class="fas fa-plus"></i></button></div>' +
                '</div>';

                $('#formPedidos').append(nuevoItem);

                $('.selectpicker').selectpicker();
                $('.selectpicker').selectpicker('refresh');
            });

            $('#chkDescuento').on('change', function () {

                if ($(this).prop('checked'))
                    $('#txtDescuento').prop('disabled', false);
                else {
                    $('#txtDescuento').prop('disabled', true).val('');
                    $('#btnCalcTotal').trigger('click');
                }
            });

            $('#txtDescuento').on('keyup', function () {
                var total = $('#txtTotal').val();
                var descuento = $('#txtDescuento').val();
                var totalDescuento = total - (total * (descuento / 100));
                $('#txtTotal').val(totalDescuento);
                $('#btnCalcTotal').trigger('click');
            });

            function ValidarDatos(array, objError) {

                var lista1 = array;

                for (var i = 0; i < lista1.length; i++) {

                    if (i < lista1.length - 1) {

                        for (var j = i + 1; j < lista1.length; j++) {

                            if (lista1[i].IdProducto == lista1[j].IdProducto) {
                                objError.bHayError = true;
                                objError.msj = "No pueden existir dos item con el mismo producto";
                            }
                        }
                    }
                }

                for (var i = 0; i < lista1.length; i++) {

                    if (lista1[i].IdProducto == '' || lista1[i].IdProducto == undefined || lista1[i].IdProducto == null) {
                        objError.bHayError = true;
                        objError.msj = "Debe indicar el producto de cada item";
                    }
                }

                for (var i = 0; i < lista1.length; i++) {

                    if (lista1[i].Cantidad == "" || lista1[i].Cantidad == undefined || lista1[i].Cantidad == null) {
                        objError.bHayError = true;
                        objError.msj = "Debe indicar la cantidad de packs de cada item";
                    }
                }

                if ($('#cmbClientesPedido').val() == '' || $('#cmbClientesPedido').val() == undefined || $('#cmbClientesPedido').val() == null) {
                    objError.bHayError = true;
                    objError.msj = "Debe elegir un cliente";
                }

                if ($('#cmbEstadosPedido').val() == '' || $('#cmbEstadosPedido').val() == undefined || $('#cmbEstadosPedido').val() == null) {
                    objError.bHayError = true;
                    objError.msj = "Debe elegir un estado";
                }

                if ($('#txtFechaEntrega').val() == '' || $('#txtFechaEntrega').val() == undefined || $('#txtFechaEntrega').val() == null) {
                    objError.bHayError = true;
                    objError.msj = "Debe elegir una fecha de entrega";
                }

                if ($('#chkDescuento').prop('checked') && $('#txtDescuento').val() == '' ) {
                    objError.bHayError = true;
                    objError.msj = "Debe indicar el descuento";
                }

                return objError.bHayError;
            }

            $('#btnGenerarPedido').click(function (e) {

                var objError =
                {
                    bHayError: false,
                    msj: ""
                };

                var Total = 0;
                var IdPedido = $('#txtId').val();
                var Facturado = parseFloat($('#txtFacturado').val());
                var CantidadProductos = 0;
                var CantidadPacks = 0;
                var Productos = [];
                var Estado = $('#cmbEstadosPedido').val().trim();
                var ClienteElegido = $('#cmbClientesPedido').val();
                var Repartidor = $('#cmbUsuariosPedido').val();
                var Vuelta = $('#cmbVueltas').val();
                var FechaEntrega = $('#txtFechaEntrega').val();
                var AplicaDesc = $('#chkDescuento').prop('checked') ? 'S' : 'N';
                var Descuento = $('#chkDescuento').prop('checked') ? parseFloat($('#txtDescuento').val()) : 0;

                //Prevenimos que se realice un nuevo submit
                e.preventDefault();

                $('#formPedidos > .row > #item').each(function () {

                    var monto = $(this).find('.col-sm-2.monto').find('input[type="text"]').val();
                    var packs = $(this).find('.col-sm-2.cantidad').find('input[type="text"]').val();
                    var montoTotal = $('#total').val();
                    Total = parseInt(Total) + parseInt(monto);
                    CantidadProductos = parseInt(CantidadProductos) + 1;
                    CantidadPacks = parseInt(CantidadPacks) + parseInt(packs);
                    var id = $(this).find('.col-sm-3').find('.bootstrap-select').find('select').children('option:selected').data("info");
                    var precio = $(this).find('.col-sm-2.precio').find('input[type="text"]').val();

                    var item = {
                        IdProducto: id,
                        Cantidad: packs,
                        Precio: precio,
                        Monto: monto
                    };

                    Productos.push(item);
                });

                if ($('#chkDescuento').prop('checked'))
                    Total = Total - (Total * (Descuento / 100));
                     Total = Math.round(Total);

                if (!ValidarDatos(Productos, objError)) {

                    var dataToPost = {
                        xiPedido: IdPedido,
                        xdFechaEntrega: FechaEntrega,
                        xsEstado: Estado,
                        xiCliente: ClienteElegido,
                        xsUsuario: Repartidor,
                        xdTotal: Total,
                        xdFacturado: Facturado,
                        xoProductos: Productos,
                        xsAplicaDesc: AplicaDesc,
                        xdDescuento: Descuento,
                        xiVuelta: Vuelta
                    }

                    swal({
                        title: "¿Desea finalizar el pedido?",
                        text: "Cliente: " + $('#cmbClientesPedido').children('option:selected').html() + ", Cantidad de Productos: " + CantidadProductos + ", Packs: " + CantidadPacks + ", Total: $ " + (Math.round(Total * 100) / 100),
                        icon: "warning",
                        buttons: ['Cancelar', 'Confirmar'],
                        dangerMode: false,
                    }).then(function (bConfirma) {
                        if (bConfirma) {
                            if (Productos.length > 0) {
                                $.ajax({
                                    method: 'POST',
                                    data: dataToPost,
                                    url: '@Url.Action("GuardarPedido","Pedido")',
                                    success: function (response) {

                                        if (response == "") {
                                            swal({
                                                title: "Exito!",
                                                text: "Pedido generado correctamente",
                                                icon: "success",
                                                button: "Aceptar"
                                            });
                                            $('#NuevoForm').modal('hide');
                                            Limpiar();
                                            CargarPedidos();
                                        }
                                        else {
                                            swal({
                                                title: "Error",
                                                text: response,
                                                icon: "error",
                                                button: "Aceptar"
                                            });
                                        }
                                    },
                                    error: function (response) {
                                        swal({
                                            title: "Error",
                                            text: response,
                                            icon: "error",
                                            button: "Aceptar"
                                        });
                                    }
                                });
                            }
                        }
                    });
                }
                else {
                    swal({
                        title: "Atención",
                        text: objError.msj,
                        icon: "warning",
                        button: "Aceptar"
                    });
                }
            });

            function CargarPedidos() {

                var xsFechaDesde = $('#txtFechaDesde').val();
                var xsFechaHasta = $('#txtFechaHasta').val();
                var xiCliente = $('#cmbClientes').val();
                var xsEstado = $('#cmbEstados').val();
                var xsUsuario = $('#cmbUsuarios').val();

                var url = '@Url.Action("GetPedidos","Pedido")?xsFechaDesde=' + xsFechaDesde + '&xsFechaHasta=' + xsFechaHasta +
