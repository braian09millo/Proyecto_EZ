            function toDate(fecha) {

                var parts = fecha.split('-');
                var f = new Date(parts[2], parts[1], parts[0]);
                var anio = f.getFullYear();
                var mes = f.getMonth();
                var dia = f.getDate();

                if (mes < 10)
                    mes = '0' + mes;

                if (dia < 10)
                    dia = '0' + dia;

                var fechaEntrega = anio + '-' + mes + '-' + dia;

                return fechaEntrega;
            }

